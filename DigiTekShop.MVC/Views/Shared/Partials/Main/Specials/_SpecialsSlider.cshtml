<div class="ui-box ui-box-specials pb-3 mb-5" style="background-color: #f03426;">
    <div class="container">
        <div class="ui-box-title text-white fw-bolder d-sm-none">قبل از اتمام جشنواره خرید کن!</div>
        <div class="ui-box-content">
            <div class="row">
                <div class="col-lg-3 d-lg-block d-none">
                    <div class="specials-container">
                        <img src="./theme-assets/images/theme/specials.png" class="img-fluid" alt="">
                        <a href="#" class="btn btn-sm btn-outline-light">مشاهده همه <i class="ri-arrow-left-fill ms-2"></i></a>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="swiper product-specials-swiper-slider mb-3 pb-5">
                        <div class="swiper-wrapper">

                            @* اسلاید اول تبلیغی در موبایل *@
                            <div class="swiper-slide d-lg-none d-sm-block d-none">
                                <div class="specials-container">
                                    <img src="./theme-assets/images/theme/specials.png" class="img-fluid mb-0" alt="">
                                    <a href="#" class="btn btn-sm btn-outline-light">مشاهده همه <i class="ri-arrow-left-fill ms-2"></i></a>
                                </div>
                            </div>

                            @* === چند نمونه کارت محصول؛ حالا از Partial کارت استفاده می‌کنیم === *@
                            <div class="swiper-slide">
                                @await Html.PartialAsync("Partials/Main/Products/_ProductCard", new
                                    {
                                        Img = "01.jpg",
                                        Title = "iPhone 13 A2634 128GB",
                                        Old = "26,900,000",
                                        Discount = "2",
                                        Now = "26,249,000"
                                    })
                            </div>

                            <div class="swiper-slide">
                                @await Html.PartialAsync("Partials/Main/Products/_ProductCard", new
                                    {
                                        Img = "02.jpg",
                                        Title = "Xiaomi 11 lite 5G NE 256GB",
                                        Old = (string?)null,
                                        Discount = (string?)null,
                                        Now = "8,239,000"
                                    })
                            </div>

                            @* ... ادامه اسلایدها *@

                        </div>
                        <div class="swiper-pagination"></div>
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-button-next"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
