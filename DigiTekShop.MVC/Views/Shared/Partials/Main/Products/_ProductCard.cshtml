@{
    string Img = (string)ViewData.Eval("Img") ?? "01.jpg";
    string Title = (string)ViewData.Eval("Title") ?? "محصول";
    string? Old = (string?)ViewData.Eval("Old");
    string? Discount = (string?)ViewData.Eval("Discount");
    string Now = (string)ViewData.Eval("Now") ?? "-";
}

<div class="product-card">
    <div class="product-thumbnail">
        <a href="#"><img src="/images/products/@Img" alt="@Title"></a>
    </div>

    <div class="product-card-body">
        <h2 class="product-title"><a href="#">@Title</a></h2>

        @* واریانت رنگ‌ها اگر لازم شد پارامتری کن *@
        <div class="product-variant">
            <span class="color" style="background-color: #d4d4d4;"></span>
            <span class="color" style="background-color: #e86841;"></span>
            <span class="color" style="background-color: #b82c32;"></span>
            <span>+</span>
        </div>

        <div class="product-price fa-num">
            @if (!string.IsNullOrEmpty(Old) && !string.IsNullOrEmpty(Discount))
            {
                <div class="d-flex align-items-center">
                    <del class="price-old">@Old</del>
                    <span class="discount ms-2">%@Discount</span>
                </div>
            }
            <span class="price-now">@Now <span class="currency">تومان</span></span>
        </div>
    </div>

    <div class="product-card-footer">
        <div class="d-flex align-items-center justify-content-between border-top mt-2 py-2">
            <div class="product-actions">
                <ul>
                    <li><a href="#" data-bs-toggle="tooltip" data-bs-placement="top" aria-label="افزودن به سبد خرید"><i class="ri-shopping-cart-line"></i></a></li>
                    <li><a href="#" data-bs-toggle="tooltip" data-bs-placement="top" aria-label="مشاهده سریع" data-remodal-target="quick-view-modal"><i class="ri-search-line"></i></a></li>
                    <li><a href="#" data-bs-toggle="tooltip" data-bs-placement="top" aria-label="افزودن به علاقمندی"><i class="ri-heart-3-line"></i></a></li>
                </ul>
            </div>
            <div class="product-rating fa-num">
                <i class="ri-star-fill star"></i>
                <strong>۴.۴</strong>
                <span>(۴۳۶)</span>
            </div>
        </div>
        @* اگر تایمر داری، اینجا پارامتری کن *@
        @* <div class="countdown-timer fa-num" data-countdown="2026/01/01"></div> *@
    </div>
</div>
