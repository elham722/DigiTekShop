@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
@{
    var tokens = Antiforgery.GetAndStoreTokens(Context);
    ViewData["Title"] = "پروفایل من";
}

<section class="profile-section">
    <div class="container">
        <!-- کارت پروفایل -->
        <div class="profile-card">
            <!-- هدر -->
            <div class="profile-header">
                <div class="profile-avatar">
                    <i class="ri-user-line"></i>
                </div>
                <h1 id="profileName" class="profile-name">در حال بارگذاری...</h1>
                <span id="profileStatus" class="profile-badge"></span>
            </div>

            <!-- پیام‌ها -->
            <div id="alertContainer"></div>

            <!-- اطلاعات اصلی -->
            <div class="profile-info">
                <div class="info-row">
                    <div class="info-item">
                        <i class="ri-mail-line"></i>
                        <div class="info-content">
                            <label>ایمیل</label>
                            <span id="profileEmail">-</span>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="ri-phone-line"></i>
                        <div class="info-content">
                            <label>شماره موبایل</label>
                            <span id="profilePhone" dir="ltr">-</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- آدرس‌ها -->
            <div class="profile-addresses" id="addressesSection" style="display: none;">
                <div class="section-header">
                    <h3><i class="ri-map-pin-line"></i> آدرس‌ها</h3>
                </div>
                <div id="addressesList" class="addresses-list"></div>
            </div>

            <!-- دکمه ویرایش -->
            <div class="profile-actions">
                <button type="button" class="btn-edit" onclick="openEditModal()">
                    <i class="ri-edit-line"></i>
                    ویرایش پروفایل
                </button>
            </div>
        </div>
    </div>
</section>

<!-- مودال ویرایش -->
<div id="editModal" class="modal-overlay" style="display: none;">
    <div class="modal-card">
        <div class="modal-header">
            <h2><i class="ri-user-settings-line"></i> ویرایش پروفایل</h2>
            <button type="button" class="modal-close" onclick="closeEditModal()">
                <i class="ri-close-line"></i>
            </button>
        </div>

        <form id="profileForm" class="modal-form" novalidate>
            <input name="__RequestVerificationToken" type="hidden" value="@tokens.RequestToken" />

            <div class="form-group">
                <label for="fullName">
                    <i class="ri-user-line"></i> نام کامل
                    <span class="required">*</span>
                </label>
                <input type="text" 
                       id="fullName" 
                       name="fullName" 
                       class="form-control"
                       placeholder="نام و نام خانوادگی"
                       required
                       minlength="2"
                       maxlength="200" />
                <span class="field-error" id="fullNameError"></span>
            </div>

            <div class="form-group">
                <label for="email">
                    <i class="ri-mail-line"></i> ایمیل
                </label>
                <input type="email" 
                       id="email" 
                       name="email" 
                       class="form-control"
                       placeholder="example@email.com"
                       dir="ltr" />
                <span class="field-error" id="emailError"></span>
            </div>

            <div class="form-group">
                <label for="phone">
                    <i class="ri-phone-line"></i> شماره موبایل
                </label>
                <input type="tel" 
                       id="phone" 
                       name="phone" 
                       class="form-control"
                       placeholder="09123456789"
                       pattern="^09\d{9}$"
                       maxlength="11"
                       dir="ltr" />
                <span class="field-error" id="phoneError"></span>
                <small class="form-hint">فرمت: 09xxxxxxxxx</small>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">
                    <span class="btn-text">ذخیره تغییرات</span>
                    <span class="btn-spinner" style="display: none;">
                        <i class="ri-loader-4-line ri-spin"></i>
                    </span>
                </button>
                <button type="button" class="btn-cancel" onclick="closeEditModal()">
                    انصراف
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script type="module" src="/js/modules/account/profile.js" asp-append-version="true"></script>
}

