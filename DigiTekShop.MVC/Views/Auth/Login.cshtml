@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
@{
    var tokens = Antiforgery.GetAndStoreTokens(Context);
}

@{
    ViewData["Title"] = "ورود و ثبت نام";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DigiTekShop</title>
    <meta name="request-verification-token" content="@tokens.RequestToken" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    
    <!-- Custom Notification Styles -->
    <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
</head>
<body class="auth-body">
    <div class="login-container">
        <div class="login-card">
            <!-- لوگو -->
            <div class="logo-section">
                <div class="logo-placeholder">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <h1 class="logo-text">DigiTekShop</h1>
            </div>

            <!-- فرم لاگین -->
            <div class="login-form">
                <h2 class="login-title">ورود به سایت</h2>
                <p class="login-subtitle">لطفا شماره موبایل خود را وارد کنید</p>

                <!-- مرحله 1: شماره -->
                <div id="phoneStep" class="auth-step active">
                    <form id="phoneForm" class="auth-form" autocomplete="off" novalidate>
                        <input name="__RequestVerificationToken" type="hidden" value="@tokens.RequestToken" /> 
                        <div class="mb-3">
                            <input type="tel"
                                   id="phoneNumber"
                                   name="phoneNumber"
                                   class="form-control phone-input"
                                   placeholder="۰۹۱۲۳۴۵۶۷۸۹"
                                   inputmode="numeric"
                                   pattern="^09\d{9}$"
                                   maxlength="11"
                                   required>
                        </div>

                        <button type="submit" class="login-btn">
                            <span class="btn-text">ورود</span>
                            <span class="btn-spinner d-none"><i class="fas fa-spinner fa-spin"></i></span>
                        </button>
                    </form>
                </div>

                <!-- مرحله 2: کد -->
                <div id="otpStep" class="auth-step" aria-hidden="true">
                    <div class="back-section">
                        <button type="button" class="back-btn" onclick="goBackToPhone()" aria-label="بازگشت">
                            <i class="fas fa-arrow-right"></i>
                        </button>
                        <h3 class="otp-title">تایید شماره موبایل</h3>
                        <p class="otp-subtitle">
                            کد ۶ رقمی ارسال شده به
                            <span id="displayPhone" class="phone-display"></span>
                            را وارد کنید
                        </p>
                    </div>

                    <form id="otpForm" class="auth-form" autocomplete="off" novalidate>
                        <input name="__RequestVerificationToken" type="hidden" value="@tokens.RequestToken" />
                        <div class="mb-3">
                            <div class="otp-input-container" role="group" aria-label="OTP">
                                <input type="text" class="otp-input" maxlength="1"
                                        inputmode="numeric" pattern="[0-9]*" dir="ltr"
                                        autocomplete="one-time-code" name="one-time-code" aria-label="رقم اول">
                                <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" dir="ltr" aria-label="رقم دوم">
                                <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" dir="ltr" aria-label="رقم سوم">
                                <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" dir="ltr" aria-label="رقم چهارم">
                                <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" dir="ltr" aria-label="رقم پنجم">
                                <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" dir="ltr" aria-label="رقم ششم">
                            </div>
                            <input type="hidden" id="otpCode" name="otpCode">
                        </div>

                        <div class="resend-section">
                            <p class="resend-text">
                                کد را دریافت نکردید؟
                                <button type="button" id="resendBtn" class="resend-link" disabled>ارسال مجدد</button>
                            </p>
                            <div class="countdown" id="countdown">
                                <i class="far fa-clock"></i>
                                <span id="countdownText">0:60</span>
                            </div>
                        </div>

                        <button type="submit" class="login-btn">
                            <span class="btn-text">تایید و ورود</span>
                            <span class="btn-spinner d-none"><i class="fas fa-spinner fa-spin"></i></span>
                        </button>
                    </form>
                </div>

                <!-- مرحله موفقیت -->
                <div id="successStep" class="auth-step" aria-hidden="true">
                    <div class="success-container">
                        <div class="success-icon"><i class="fas fa-check-circle"></i></div>
                        <h3 class="success-title">ورود موفقیت‌آمیز</h3>
                        <p class="success-message">در حال انتقال به داشبورد...</p>
                        <div class="success-spinner"><i class="fas fa-spinner fa-spin"></i></div>
                    </div>
                </div>
            </div>

            <div class="login-footer">
                <p class="footer-text">
                    ورود به منزله پذیرش 
                    <a href="/legal/privacy" class="privacy-link">قوانین حریم خصوصی</a>
                    است.
                </p>
            </div>
        </div>
    </div>

    <div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3"></div>

    <!-- jQuery removed - using Vanilla JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Custom Notification System -->
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    
    <!-- API Helpers -->
    <script src="~/js/api-helpers.js" asp-append-version="true"></script>
    
    <script src="~/js/auth.js" asp-append-version="true" defer></script>
</body>
</html>
