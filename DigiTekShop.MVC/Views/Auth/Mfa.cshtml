@model DigiTekShop.Contracts.DTOs.Auth.Mfa.VerifyMfaRequest
@{
    ViewData["Title"] = "MFA";
}
<h1>MFA Verification</h1>
<form asp-action="VerifyMfa" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Method" />  
    <div>
        <label asp-for="Code">Code</label>
        <input asp-for="Code" autocomplete="one-time-code" />
        <span asp-validation-for="Code"></span>
    </div>
    <div>
        <input type="checkbox" asp-for="TrustThisDevice" />
        <label asp-for="TrustThisDevice">Trust this device</label>
    </div>
    <button type="submit">Verify</button>
    @Html.ValidationSummary()
</form>