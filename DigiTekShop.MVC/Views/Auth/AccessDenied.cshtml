@{
    ViewData["Title"] = "دسترسی غیرمجاز";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="ri-shield-cross-line" style="font-size: 5rem; color: #dc3545;"></i>
                    </div>
                    <h1 class="card-title mb-3 fw-bold">دسترسی غیرمجاز</h1>
                    <p class="text-muted mb-4 fs-5">
                        متأسفانه شما دسترسی لازم برای مشاهده این بخش را ندارید.
                    </p>
                    <div class="alert alert-info text-start mb-4" role="alert">
                        <i class="ri-information-line me-2"></i>
                        <strong>نکته:</strong> اگر فکر می‌کنید این یک اشتباه است، لطفاً با مدیر سیستم تماس بگیرید.
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="/" class="btn btn-primary btn-lg px-4">
                            <i class="ri-home-line me-2"></i>
                            بازگشت به صفحه اصلی
                        </a>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="/Auth/Logout" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="ri-logout-box-line me-2"></i>
                                خروج و ورود مجدد
                            </a>
                        }
                        else
                        {
                            <a href="/Auth/Login" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="ri-login-box-line me-2"></i>
                                ورود با حساب کاربری دیگر
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

