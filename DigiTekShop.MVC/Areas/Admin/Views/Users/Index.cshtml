@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "مدیریت کاربران";
}


<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption">لیست کاربران</span>
                    <div class="widget-buttons">
                        <a href="#" data-toggle="maximize">
                            <i class="fa fa-expand"></i>
                        </a>
                        <a href="#" data-toggle="collapse">
                            <i class="fa fa-minus"></i>
                        </a>
                        <a href="#" data-toggle="dispose">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="widget-body no-padding">
                    <!-- فیلترها -->
                    <form id="userFilterForm" class="row gy-2 align-items-end mb-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">جستجو</label>
                            <input type="text" id="search" name="search" class="form-control" placeholder="نام، موبایل یا ایمیل" />
                        </div>
                        <div class="col-md-3">
                            <label for="status" class="form-label">وضعیت</label>
                            <select id="status" name="status" class="form-select">
                                <option value="">همه وضعیت‌ها</option>
                                <option value="Active">فعال</option>
                                <option value="Locked">قفل شده</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="pageSize" class="form-label">تعداد در صفحه</label>
                            <select id="pageSize" name="pageSize" class="form-select">
                                <option value="10">10</option>
                                <option value="20" selected>20</option>
                                <option value="50">50</option>
                            </select>
                        </div>
                        <div class="col-md-3 text-end">
                            <button type="submit" class="btn btn-primary mt-3 mt-md-0">
                                <i class="fa fa-search ms-1"></i>
                                اعمال فیلتر
                            </button>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped" id="usersTable">
                            <thead class="bordered-darkorange">
                                <tr>
                                    <th>کاربر</th>
                                    <th>ایمیل</th>
                                    <th>نقش‌ها</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>آخرین ورود</th>
                                    <th class="text-center">عملیات</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mt-3">
                        <span id="usersCount" class="text-muted"></span>
                        <div class="d-flex align-items-center gap-3">
                            <div id="paginationInfo" class="text-muted"></div>
                            <ul class="pagination mb-0" id="pagination"></ul>
                        </div>
                    </div>
                </div> <!-- /widget-body -->
            </div> <!-- /widget -->
        </div>
    </div>
</div>
@section Scripts {
    <script type="module" src="~/admin/js/users-index.js" asp-append-version="true"></script>
}
