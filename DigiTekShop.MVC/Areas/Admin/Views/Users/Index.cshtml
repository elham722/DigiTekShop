@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "مدیریت کاربران";
}

<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption">لیست کاربران</span>
                    <div class="widget-buttons">
                        <a href="#" data-toggle="maximize">
                            <i class="fa fa-expand"></i>
                        </a>
                        <a href="#" data-toggle="collapse">
                            <i class="fa fa-minus"></i>
                        </a>
                        <a href="#" data-toggle="dispose">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="widget-body">

                    <!-- نوار فیلتر بالا -->
                    <div class="table-toolbar admin-users-filter">
                        <form id="userFilterForm" class="row" style="margin:0;">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="search" class="control-label">جستجو</label>
                                    <input type="text"
                                           id="search"
                                           name="search"
                                           class="form-control input-sm"
                                           placeholder="نام، موبایل یا ایمیل" />
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="status" class="control-label">وضعیت</label>
                                    <select id="status"
                                            name="status"
                                            class="form-control input-sm">
                                        <option value="">همه وضعیت‌ها</option>
                                        <option value="active">فعال</option>
                                        <option value="locked">قفل شده</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="pageSize" class="control-label">تعداد در صفحه</label>
                                    <select id="pageSize"
                                            name="pageSize"
                                            class="form-control input-sm">
                                        <option value="10">10</option>
                                        <option value="20" selected>20</option>
                                        <option value="50">50</option>
                                    </select>
                                </div>
                            </div>
                            <!-- دیگه دکمه اعمال فیلتر نداریم -->
                        </form>
                    </div>

                    <!-- جدول کاربران -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped" id="usersTable">
                            <thead class="bordered-darkorange">
                                <tr role="row">
                                    <th>کاربر</th>
                                    <th>شماره تماس</th>
                                    <th>ایمیل</th>
                                    <th>نقش‌ها</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>آخرین ورود</th>
                                    <th class="text-center">عملیات</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <!-- فوتر شمارنده و صفحه‌بندی -->
                    <div class="admin-users-footer">
                        <div class="row">
                            <div class="col-sm-4 col-xs-12 text-left">
                                <span id="usersCount" class="text-muted"></span>
                            </div>

                            <div class="col-sm-4 col-xs-12 text-center">
                                <ul class="pagination pagination-sm admin-pagination" id="pagination"></ul>
                            </div>

                            <div class="col-sm-4 col-xs-12 text-right">
                                <div id="paginationInfo" class="text-muted"></div>
                            </div>
                        </div>
                    </div>

                </div> <!-- /widget-body -->
            </div> <!-- /widget -->
        </div>
    </div>
</div>

<!-- Modal جزئیات کاربر -->
<div class="modal fade" id="userDetailsModal" tabindex="-1" role="dialog" aria-labelledby="userDetailsLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="userDetailsLabel">جزئیات کاربر</h4>
            </div>
            <div class="modal-body">
                <div id="userDetailsContent">
                    <p class="text-muted">در حال بارگذاری...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/admin/js/users-index.js" asp-append-version="true"></script>
}
